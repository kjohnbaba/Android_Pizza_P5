<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreOrdersActivity">

    <ListView
        android:id="@+id/store_list"
        android:layout_width="397dp"
        android:layout_height="420dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_order"
        android:layout_width="179dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:text="@string/storeorder2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/store_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <TextView
        android:id="@+id/order_totaltax"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/store_list"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cancel_order"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_marginBottom="64dp"
        android:onClick="removeOrder"
        android:text="@string/storeorder1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_list"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/store_list"
        app:layout_constraintEnd_toStartOf="@+id/order_totaltax"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_order"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>